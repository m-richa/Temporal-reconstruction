{
    "name": "ResNetAE_L1",
    "n_gpu": 4,

    "arch": {
        "type": "ResNetAE",
        "args": {}
    },
    "dataloader": {
        "type": "TemporalDataloader",
        "args":{
            "dataset_path": "/../../../ssd_scratch/cvit/richa/dataset/",
            "seq_ID" : "03384",
            "K_frames": 4,
            "batch_size": 4,
